<resources>

    <style name="FancyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="positiveButtonStyle">@style/positiveButtonStyle</item>
        <item name="negativeButtonStyle">@style/negativeButtonStyle</item>
        <item name="textTitleColor">@color/colorTitle</item>
        <item name="textSubTitleColor">@color/colorSubTitle</item>
        <item name="dialogBackground">@color/colorDialogBackground</item>
    </style>


    <style name="positiveButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPositive</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@android:color/white</item>
    </style>


    <style name="negativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorNegative</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>
